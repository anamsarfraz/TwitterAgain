<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="start">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivRetweetStatus"
        android:layout_marginEnd="@dimen/margin8"
        app:srcCompat="@drawable/ic_launcher" />
    <ImageView
        android:id="@+id/ivRetweetStatus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="@dimen/margin8"
        app:srcCompat="@drawable/retweet_default"
        android:layout_alignEnd="@id/ivProfileImage" />
    <TextView
        android:id="@+id/tvOrigUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_alignBottom="@+id/ivRetweetStatus"
        tools:text="Ingrid Maddison Retweeted" />
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="CNN"
        android:drawableEnd="@drawable/verified_user"/>
    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="\@CNN"
        android:layout_marginStart="@dimen/margin4"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_toEndOf="@+id/tvUserName"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="@dimen/width100"
        android:drawableEnd="@drawable/dot_divider"
        android:drawablePadding="@dimen/margin4"/>
    <TextView
        android:id="@+id/tvCreatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvScreenName"
        android:layout_marginStart="@dimen/margin4"
        android:layout_toEndOf="@+id/tvScreenName"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        tools:text="25m" />
    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Samsung is known around the world for its smartphones. But in South Korea, it's a lot more than just a tech brand http://cnn.it/2mMWwRT "
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginEnd="@dimen/margin4"
        android:layout_below="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="@color/twitter_blue" />
    <ImageView
        android:id="@+id/ivMultiMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tvBody"
        android:layout_below="@+id/tvBody"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin4"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
         />

    <com.volokh.danylo.video_player_manager.ui.VideoPlayerView
        android:id="@+id/vvMultiMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivMultiMedia"
        android:layout_alignStart="@+id/ivMultiMedia" />
    <Button
        android:id="@+id/btnReply"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/ivMultiMedia"
        android:layout_alignStart="@id/ivMultiMedia"
        android:layout_marginTop="@dimen/margin8"
        android:background="@drawable/reply_default"/>
    <Button
        android:id="@+id/btnRetweet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/ivMultiMedia"
        android:layout_alignTop="@id/btnReply"
        android:layout_toEndOf="@id/btnReply"
        android:layout_marginStart="@dimen/margin64"
        android:background="@drawable/retweet_default"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRetweet"
        tools:text="48"
        android:layout_marginStart="@dimen/margin4"
        android:layout_alignBaseline="@id/btnRetweet"
        android:layout_toEndOf="@id/btnRetweet"
        android:textColor="@color/twitter_grey_dark"/>
    <Button
        android:id="@+id/btnLike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/ivMultiMedia"
        android:layout_alignTop="@id/btnRetweet"
        android:layout_toEndOf="@id/btnRetweet"
        android:layout_marginStart="@dimen/margin64"
        android:background="@drawable/like_default"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLike"
        tools:text="48"
        android:layout_marginStart="@dimen/margin4"
        android:layout_alignBaseline="@id/btnLike"
        android:layout_toEndOf="@id/btnLike"
        android:textColor="@color/twitter_grey_dark"/>
    <Button
        android:id="@+id/btnMessage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/ivMultiMedia"
        android:layout_alignTop="@id/btnLike"
        android:layout_toEndOf="@id/btnLike"
        android:layout_marginStart="@dimen/margin64"
        android:background="@drawable/message_default"/>

</RelativeLayout>