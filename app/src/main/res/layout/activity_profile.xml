<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/mainProfileContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.codepath.apps.twitter.activities.ProfileActivity">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/abProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tbProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways|exitUntilCollapsed"
                android:background="@android:color/white"
                android:minHeight="48dp">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/flUserHeader"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tbProfile"
            >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@id/flUserHeader"
            >

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>





