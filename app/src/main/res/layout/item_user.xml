<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="start">

    <ImageView
        android:id="@+id/ivProfileImageUser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/margin8"
        app:srcCompat="@drawable/ic_launcher" />
    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivProfileImageUser"
        android:layout_toEndOf="@id/ivProfileImageUser"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="CNN"
        android:drawableEnd="@drawable/verified_user"/>
    <TextView
        android:id="@+id/tvScreenNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="\@CNN"
        android:textColor="@color/twitter_grey_dark"
        android:layout_alignStart="@id/tvNameUser"
        android:layout_below="@id/tvNameUser" />
</RelativeLayout>