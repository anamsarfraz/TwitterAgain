<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:background="@color/twitter_grey"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivNavHeader"
        app:srcCompat="@drawable/tweet_social"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/ivNavProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/tweet_social_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginStart="@dimen/margin8"/>
    <TextView
        android:id="@+id/tvNavUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivNavProfile"
        android:layout_alignStart="@id/ivNavProfile"
        android:layout_marginTop="@dimen/margin16"
        />
    <TextView
        android:id="@+id/tvNavScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNavUsername"
        android:layout_alignStart="@id/tvNavUsername"
        android:layout_marginTop="@dimen/margin4"
        />

</RelativeLayout>