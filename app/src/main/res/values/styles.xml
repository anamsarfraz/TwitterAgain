<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ComposeDialog" parent="Theme.AppCompat.Dialog" >
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="ConfirmationDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarNegativeButtonStyle" tools:ignore="NewApi">@style/negative_bar_button</item>
        <item name="android:buttonBarButtonStyle">@style/bar_button</item>
    </style>

    <style name="bar_button">
        <item name="android:textColor">#1da1f2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
    </style>

    <style name="negative_bar_button">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#1da1f2</item>
    </style>

</resources>
